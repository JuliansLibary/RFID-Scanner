<Window x:Class="RFID_Scanner.LayoutCL.Heraufstufen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RFID_Scanner.LayoutCL"
             mc:Ignorable="d" 
             Icon="rfid.png" Height="450" Width="340" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#6093AC" WindowStyle="SingleBorderWindow" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25">

            </RowDefinition>
            <RowDefinition Height="400"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#181735" x:Name="Edvschule">
            <TextBlock Margin="5,2,0,0" Text="EDV-Schule Plattling" Grid.Row="0" Foreground="white" FontSize="15" FontWeight="Bold"/>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Margin="0,31,0,0">
                <TextBox FontFamily="Helvetica"
                             FontWeight="Light"
                             Text="Karte Scannen"
                         x:Name="UITextbox"
                             FontSize="20"
                             HorizontalAlignment="Center"
                             Foreground="White"
                             Background="Transparent"
                             BorderThickness="0"
                             Width="235"
                             HorizontalContentAlignment="Center"
                             Opacity="0.95"
                             Height="25"
                             Margin="0,100,0,0"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox
                             FontWeight="Light"
                             Text=""
                             FontSize="20"
                        x:Name="CardInput"
                        PreviewTextInput="CardInput_PreviewTextInput"   
                         
                       
                             HorizontalAlignment="Center"
                             Foreground="White"
                             Background="Transparent"
                             BorderThickness="0"
                             Width="196"
                             HorizontalContentAlignment="Center"
                             Opacity="0.5"
                             Height="25"
                             Margin="63,1,0,0"/>
                </StackPanel>
                <Border Width="250"
                        Height="2"
                        Background="White"
                        Opacity="0.5"/>
                <StackPanel Orientation="Horizontal">
                    <PasswordBox FontFamily="Helvetica"
                             FontWeight="Light"
                             x:Name="UI_passwort"
                             FontSize="20"
                             HorizontalAlignment="Center"
                             Foreground="White"
                             Background="Transparent"
                             BorderThickness="0"
                             Width="195"
                             HorizontalContentAlignment="Center"
                             Opacity="0.5"
                             Height="25"
                             Margin="63,30,0,0"/>
                </StackPanel>
                <Border Width="250"
                        Height="2"
                        Background="White"
                        Opacity="0.5"/>
                <StackPanel Orientation="Horizontal" Margin="-20,50,0,0" >
                    <Button x:Name="Abbrechen" Width="100" Height="40" Content="Abbrechen" Background="#ff6961" Margin="60,0,60,0" FontSize="15" FontWeight="Light" Click="Abbrechen_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4.5"></Setter>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="Uebernehmen" Width="100" Height="40" Content="Ãœbernehmen" IsDefault="False" Background="#90ee90" FontSize="15" FontWeight="Light" Click="Uebernehmen_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4.5"></Setter>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
